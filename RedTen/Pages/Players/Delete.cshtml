@page
@model RedTen.Pages.Players.DeleteModel

@{
    ViewData["Title"] = "Delete";
}



<h1>Are you sure you want to delete this player?</h1>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Player.PlayerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index"><input type="button" value="Back To Players" class="btn btn-secondary" /></a>
    </form>
</div>
