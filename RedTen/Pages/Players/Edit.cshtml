@page
@model RedTen.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Player</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.PlayerId" />
            <div class="form-group">
                <b>
                    <label asp-for="Player.Name" class="control-label"></label>
                </b>                <input asp-for="Player.Name" class="form-control" />
                <span asp-validation-for="Player.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b>
                    <label asp-for="Player.Email" class="control-label"></label>
                </b>                <input asp-for="Player.Email" class="form-control" />
                <span asp-validation-for="Player.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> 
                <a asp-page="./Index">
                    <input type="button" value="Back To Players" class="btn btn-secondary" />
                </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
